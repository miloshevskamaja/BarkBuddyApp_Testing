@model BarkBuddyApp.Models.AddToRoleModel
@{
    ViewBag.Title = "AddRole";
}

<h2>Add Role to this mail @Model.Email</h2>

@using (Html.BeginForm("AddToRoleModel", "Account"))
{
    <div>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)
    </div>
    <div>
        @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.Roles), new { @class = "form-group" })
    </div>
    <div>
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
}

