@model IEnumerable<BarkBuddyApp.Models.DogBreed>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center;">Dog Breeds</h2>
<br />

@if (User.IsInRole("Admin"))
{
    <p>
