            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>*@
                    <td class="align-middle pe-4" style="padding-left:20px">
                        <a class="btn btn-outline-primary" href="/Producers/Edit/@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> <br />
                        <a class="btn btn-outline-info" href="/Producers/Details/@item.Id"><i class="bi bi-pencil-square"></i>Details </a> <br />
                        <a class="btn btn-danger text-white" href="/Producers/Delete/@item.Id"><i class="bi bi-pencil-square"></i>Delete </a> <br />

                     
                    </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
