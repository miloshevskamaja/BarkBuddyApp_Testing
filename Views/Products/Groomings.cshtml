@model IEnumerable<BarkBuddyApp.Models.Grooming>

@{
ViewBag.Title = "Grooming Reservations";
}


<h2>Grooming Reservations</h2>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

</head>

<table class="table">
    <thead>
        <tr>
            <th>Date & Time</th>
            <th>Dog Breed</th>
            <th>Dog Age</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.ReservationDateTime.ToString("f")</td>
                <td>@reservation.DogBreed</td>
                <td>@reservation.DogAge</td>
                <td>@reservation.Details</td>
                <td>
                    <form method="post" action="@Url.Action("RemoveItem3", "Products")" style="display:inline;">
                        <input type="hidden" name="Id" value="@reservation.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
